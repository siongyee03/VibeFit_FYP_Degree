<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".UploadPostActivity"
    android:fitsSystemWindows="true">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="none"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Horizontal Image RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/image_recycler"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:overScrollMode="never"
                android:scrollbars="horizontal"
                android:visibility="gone"
                tools:listitem="@layout/item_image_preview"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Add More Image Button -->
            <ImageButton
                android:id="@+id/add_more_image_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_plus"
                android:contentDescription="@string/add_more"
                android:visibility="gone"
                android:layout_gravity="center"/>

            <!-- Video Preview -->
            <VideoView
                android:id="@+id/previewVideo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:background="@drawable/image_placeholder"
                android:contentDescription="@string/preview_video" />

            <!-- Title Input -->
            <EditText
                android:id="@+id/title_input"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="16dp"
                android:autofillHints="username"
                android:background="@android:color/transparent"
                android:hint="@string/post_title"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_mono_regular" />

            <!-- Description Input -->
            <EditText
                android:id="@+id/description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/post_description"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:minLines="4"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:fontFamily="@font/roboto_mono_regular"
                android:autofillHints="text" />

            <!-- Category Spinner -->
            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_mono_regular"
                android:spinnerMode="dropdown"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="16sp" />

            <!-- Edit Media Button -->
            <Button
                android:id="@+id/edit_media_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_edit_button"
                android:text="@string/edit_media"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_mono_regular"
                android:elevation="4dp"
                />

        </LinearLayout>
    </ScrollView>

    <!-- Upload Progress Indicator -->
    <ProgressBar
        android:id="@+id/uploadProgress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Button Container -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/next_btn"
            android:visibility="gone"
            android:backgroundTint="@color/purple_main"
            android:textColor="@color/white"
            style="@style/FontRobotoMonoRegular" />

        <Button
            android:id="@+id/post_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/post"
            android:backgroundTint="@color/purple_main"
            android:textColor="@color/white"
            style="@style/FontRobotoMonoRegular" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
