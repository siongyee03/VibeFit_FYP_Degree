<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trim_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back_button"
        app:tint="@color/icon_black" />

    <!-- Video Preview Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="16dp"
        android:background="#000000"
        android:clipChildren="true">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Play Button Centered -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/video_play_pause"
            android:src="@android:drawable/ic_media_play"
            android:layout_gravity="center"
            app:tint="#FFFFFF" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_00_00"
            android:textColor="@color/black_text"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_00_00"
            android:textColor="@color/black_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/roboto_regular"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Thumbnail Track -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/thumbnailRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <!-- Draggable Frame Selector Overlay -->
        <com.example.vibefitapp.RangeSeekBarView
            android:id="@+id/rangeSeekBarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Trimmed Duration -->
    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trimmed_duration_00_00"
        android:textStyle="bold"
        android:textColor="@color/black_text"
        android:textSize="15sp"
        android:layout_gravity="start"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/roboto_regular"/>

    <!-- Trim Button -->
    <Button
        android:id="@+id/btnTrim"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/trim_and_save"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_main"
        style="?android:attr/buttonBarButtonStyle"
        android:fontFamily="@font/roboto_regular"/>
</LinearLayout>
