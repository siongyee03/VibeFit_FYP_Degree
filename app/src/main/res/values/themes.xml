<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VibeFitApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- main background color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black_text</item>

        <!-- main text color -->
        <item name="android:textColorPrimary">@color/black_text</item>
        <item name="colorOnBackground">@color/black_text</item>

        <item name="editTextStyle">@style/EditTextStyle</item>

        <!-- Toolbar / button main color -->
        <item name="colorPrimary">@color/purple_main</item>
        <item name="colorPrimaryContainer">@color/purple_bg</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- edit text background -->
        <item name="android:editTextBackground">@color/input_bg</item>

        <!-- icon default color -->
        <item name="android:colorControlNormal">@color/icon_black</item>

        <!-- status bar -->
        <item name="android:statusBarColor">@color/purple_main</item>
        <item name="android:navigationBarColor">@color/white</item>

        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="textAppearanceBody1">@style/FontRobotoRegular</item>
    </style>

    <style name="Theme.VibeFitApp" parent="Base.Theme.VibeFitApp" />
</resources>